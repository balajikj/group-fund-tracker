// SECURE FIRESTORE RULES - USE FOR PRODUCTION
// Only Admin/CoAdmin can create, update, and delete data
// All authenticated users can read data

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user role from members collection
    function getUserRole() {
      return get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is Admin or CoAdmin
    function isAdminOrCoAdmin() {
      return isAuthenticated() && 
             (getUserRole() == 'Admin' || getUserRole() == 'CoAdmin');
    }
    
    // Members Collection Rules
    match /members/{memberId} {
      // Everyone can read member data (to display names in transactions/loans)
      allow read: if isAuthenticated();
      
      // Only Admin/CoAdmin can create, update, delete member data
      allow write: if isAdminOrCoAdmin();
    }
    
    // Transactions Collection Rules
    match /transactions/{transactionId} {
      // Everyone can read transactions
      allow read: if isAuthenticated();
      
      // Only Admin/CoAdmin can create, update, delete transactions
      allow write: if isAdminOrCoAdmin();
    }
    
    // Loans Collection Rules
    match /loans/{loanId} {
      // Everyone can read loan data
      allow read: if isAuthenticated();
      
      // Only Admin/CoAdmin can create, update, delete loans
      allow write: if isAdminOrCoAdmin();
    }
    
    // Contribution Requests Rules
    match /contributionRequests/{requestId} {
      // Everyone can read contribution requests
      allow read: if isAuthenticated();
      
      // Any authenticated user can create requests for themselves
      allow create: if isAuthenticated() 
                    && request.resource.data.memberId == request.auth.uid
                    && request.resource.data.status == 'Pending';
      
      // Only Admin/CoAdmin can approve/reject (update) requests
      allow update: if isAdminOrCoAdmin();
      
      // Only Admin/CoAdmin can delete requests
      allow delete: if isAdminOrCoAdmin();
    }
  }
}
